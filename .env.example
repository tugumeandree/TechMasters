# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/techmasters

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-secret-key-here

# Email Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=TechMasters <noreply@techmasters.com>

# Admin Email Addresses (comma-separated)
# These emails will receive notifications when new applications are submitted
ADMIN_EMAILS=admin@techmasters.com,coordinator@techmasters.com

# Application URL
NEXT_PUBLIC_URL=http://localhost:3001

# Optional: Cloudinary for file uploads
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Optional: Socket.IO for real-time notifications
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000
